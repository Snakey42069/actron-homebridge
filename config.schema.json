{
  "pluginAlias": "Homebridge Actronair",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Homebridge Actronair"
      },
      "accessories": {
        "type": "array",
        "title": "Accessories",
        "default": [],
        "items": {
          "$ref": "#/$defs/accessory"
        }
      }
    },
    "$defs": {
      "accessory": {
        "type": "object",
        "required": [
          "name",
          "ip",
          "mac",
          "device_token",
          "user_token",
          "temp_key",
          "zones"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the accessory",
            "default": "Air Conditioning"
          },
          "ip": {
            "type": "string",
            "description": "IP address of the accessory (local network only)"
          },
          "mac": {
            "type": "string",
            "description": "MAC address of the accessory (local network only)"
          },
          "device_token": {
            "type": "string",
            "description": "Device token of the accessory"
          },
          "user_token": {
            "type": "string",
            "description": "Secret user token of the accessory"
          },
          "temp_key": {
            "title": "Temp Field Key",
            "description": "The field denoting target temp in PATCH or POST requests. Either setPoint or tempTarget",
            "type": "string",
            "default": "tempTarget",
            "oneOf": [
              {
                "title": "tempTarget",
                "enum": "tempTarget"
              },
              {
                "title": "setPoint",
                "enum": "setPoint"
              }
            ]
          },
          "zones": {
            "type": "array",
            "title": "Zones",
            "default": [],
            "items": {
              "$ref": "#/$defs/zone"
            }
          }
        }
      },
      "zone": {
        "type": "object",
        "required": ["name", "index"],
        "properties": {
          "name": {
            "type": "string"
          },
          "index": {
            "type": "number"
          }
        }
      }
    }
  }
}
